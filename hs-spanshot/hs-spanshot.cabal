cabal-version:      3.14
name:               hs-spanshot
version:            0.1.0.0
-- synopsis:
-- description:
license:            BSD-3-Clause
license-file:       LICENSE
author:             Alberto Fanton
maintainer:         alberto.fanton@protonmail.com
-- copyright:
category:           Development
build-type:         Simple
extra-doc-files:    CHANGELOG.md
-- extra-source-files:

common warnings
    ghc-options: -Wall

library
    import:           warnings
    exposed-modules:  
        Types
        Collect
        Capture
    -- other-modules:
    -- other-extensions:
    build-depends:    
        base >=4.19.2.0 && <5,
        aeson ^>=2.2,
        bytestring ^>=0.12,
        containers ^>=0.6,
        regex-tdfa ^>=1.3,
        streaming ^>=0.2,
        streaming-bytestring ^>=0.3,
        text ^>=2.1,
        time ^>=1.12
    hs-source-dirs:   src
    default-language: GHC2024

executable spanshot
    import:           warnings
    main-is:          Main.hs
    other-modules:    Paths_hs_spanshot
    -- other-extensions:
    build-depends:
        base >=4.19.2.0 && <5,
        aeson ^>=2.2,
        bytestring ^>=0.12,
        hs-spanshot,
        opt-env-conf ^>=0.11,
        streaming ^>=0.2

    hs-source-dirs:   app
    default-language: GHC2024

test-suite hs-spanshot-test
    import:           warnings
    default-language: GHC2024
    other-modules:
        CollectionSpec
        CaptureTypesSpec
        DetectionSpec
        SerializationProperties
        Fixtures
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          Main.hs
    build-depends:
        base >=4.19.2.0 && <5,
        aeson ^>=2.2,
        bytestring ^>=0.12,
        containers ^>=0.6,
        directory ^>=1.3,
        filepath ^>=1.5,
        hs-spanshot,
        hspec ^>=2.11,
        process ^>=1.6,
        QuickCheck ^>=2.14,
        quickcheck-instances ^>=0.3,
        streaming ^>=0.2,
        tasty ^>=1.5,
        tasty-hspec ^>=1.2.0.4,
        tasty-hunit ^>=0.10,
        tasty-quickcheck ^>=0.11,
        temporary ^>=1.3,
        text ^>=2.1,
        time ^>=1.12

test-suite hs-spanshot-integration-cli
    import:           warnings
    default-language: GHC2024
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          CLIIntegration.hs
    build-depends:
        base >=4.19.2.0 && <5,
        aeson ^>=2.2,
        bytestring ^>=0.12,
        directory ^>=1.3,
        filepath ^>=1.5,
        process ^>=1.6,
        tasty ^>=1.5,
        tasty-hunit ^>=0.10,
        temporary ^>=1.3,
        text ^>=2.1
    build-tool-depends: hs-spanshot:spanshot
